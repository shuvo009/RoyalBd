<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<!-- Resource dictionary entries should be defined here. -->
    
    <Style TargetType="TextBox">
        <Setter Property="Height" Value="25"></Setter>
        <Setter Property="FontSize" Value="15.333"></Setter>
    </Style>
    
    <Style TargetType="Button">
        <Setter Property="FontSize" Value="15.333"></Setter>
    </Style>
    
    <Style TargetType="PasswordBox">
        <Setter Property="FontSize" Value="15.333"></Setter>
    </Style>
    
    <Style TargetType="TextBlock">
        <Setter Property="FontSize" Value="13.333"></Setter>
    </Style>
   
    
    <Style x:Key="WindowStyle" TargetType="Grid">
        <Setter Property="Background" Value="#FF787878"></Setter>
    </Style>
    
    <Style x:Key="HeaderStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="24"></Setter>
        <Setter Property="Foreground" Value="Black"></Setter>
        <Setter Property="TextAlignment" Value="Center"></Setter>
        <Setter Property="Background" Value="#FF515151"></Setter>
    </Style>
</ResourceDictionary>